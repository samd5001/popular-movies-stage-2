<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/trailer_thumbnail"
            android:layout_width="@dimen/trailer_thumbnail_width"
            android:layout_height="@dimen/trailer_thumbnail_height"
            android:layout_marginLeft="@dimen/trailer_thumbnail_margin"
            android:layout_marginRight="@dimen/trailer_thumbnail_margin"/>

        <TextView
            android:id="@+id/trailer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_32"
            android:textSize="@dimen/trailer_text"
            android:textStyle="bold"
            tools:text="Trailer Name"/>
    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>